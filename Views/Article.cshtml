@inherits Camelonta.Boilerplate.Classes.CamelontaUmbracoTemplatePage
@{
    Layout = "~/Views/_Layout.cshtml";
}

<section id="l-sidebar">
    @RenderPage("Partials/_LeftNav.cshtml")
</section>

<article>
    <h2>@Model.Content.Name</h2>
    @Model.Content.GetPropertyValue("bodytext")
</article>

@if (!String.IsNullOrWhiteSpace(Model.Content.GetPropertyValue<string>("righttext")))
{
    <aside>
        <div>
            @Model.Content.GetPropertyValue("righttext")
        </div>
    </aside>
}