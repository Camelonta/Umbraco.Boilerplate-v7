@using System.Web.Optimization
@inherits Camelonta.Boilerplate.Classes.CamelontaUmbracoTemplatePage

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@CurrentSite.Name - @CurrentPage.Name</title>
    <meta name="description" content="@CurrentPage.metadescription">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="apple-touch-icon.png">

    <link href="@Styles.Url("~/bundles/styles")" rel="stylesheet" type="text/css" />    
    <!--[if lt IE 9]>
        <script src="@Scripts.Url("~/bundles/html5shiv")"></script>
    <![endif]-->
</head>
<body class="pagetype-@CurrentPage.DocumentTypeAlias.ToLower()">

    <div id="l-header-container">
        <header class="wrapper clearfix">
            <h1 class="title"><a href="@CurrentSite.Url">@CurrentSite.Name</a></h1>
            @RenderPage("Partials/_TopNav.cshtml")
            @RenderPage("Partials/_TopSearch.cshtml")
            @RenderPage("Partials/_TopLinks.cshtml")
        </header>
    </div>

    <div id="l-main-container">
        <main class="wrapper clearfix">
            @RenderBody()
        </main> <!-- main -->
    </div> <!-- #main-container -->

    <div id="l-footer-container">
        <footer class="wrapper">
            @CurrentPage.GetPropertyValue("footer", true)
        </footer>
    </div>

    <script async src="@Scripts.Url("~/bundles/scripts")"></script>

    @{ var siteScript = CurrentPage.GetPropertyValue("siteScript", true);}
    @if (!String.IsNullOrWhiteSpace(siteScript))
    {
        <script async>@Html.Raw(siteScript)</script>
    }

</body>
</html>