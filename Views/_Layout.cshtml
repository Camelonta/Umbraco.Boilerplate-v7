@using System.Web.Optimization
@inherits CamelontaUmbracoTemplatePage

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@Model.Content.Name - Boilerplate</title>
    <meta name="description" content="@Model.Content.GetPropertyValue("metadescription")">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="@GetMetaRobotsContent()" />


    <link rel="apple-touch-icon" href="apple-touch-icon.png">

    @*      TODO
        1. Skapa ett eget Icomoon-projekt.
        2. Vid livesättning: Ta bort denna länk till Icomoon och LADDA NED ditt egna paket. Snabblänk är endast för utveckling (för att snabbt kunna  ta bort + lägga till ikoner) *@
    <link rel="stylesheet" href="http://i.icomoon.io/public/1a91909ce0/Boilerplate-Umbraco/style.css">

    <link href="@Styles.Url("~/bundles/styles")" rel="stylesheet" type="text/css" />
    <!--[if lt IE 9]>
        <script src="@Scripts.Url("~/bundles/ltIe9Scripts")"></script>
    <![endif]-->
</head>
<body class="pagetype-@Model.Content.DocumentTypeAlias.ToLower()" itemscope itemtype="http://schema.org/WebPage">

<header>
    <div class="container">
        <a href="@CurrentSite.Url">@CurrentSite.Name</a>

        <div class="pull-right">
            <a href="#" class="mobile-menu-toggle"><i class="icon-menu"></i>meny</a>
            @RenderPage("Partials/_TopLinks.cshtml")
            @RenderPage("Partials/_SearchForm.cshtml")
        </div>
    </div>
</header>
    @RenderPage("Partials/_TopNav.cshtml")

    <main class="container">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            @Model.Content.GetPropertyValue("footer", true)
        </div>
    </footer>

    <script>
        var currentNode = '@Model.Content.Id';
    </script>

    <script async src="@Scripts.Url("~/bundles/scripts")"></script>

    @{ var siteScript = Model.Content.GetPropertyValue<string>("siteScript", true);}
    @if (!String.IsNullOrWhiteSpace(siteScript))
    {
        <script async>@Html.Raw(siteScript)</script>
    }

</body>
</html>